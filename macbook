# Funci贸n para mostrar mensajes con formato
imprimir_mensaje() {
    local mensaje="$1"
    echo -e "\n\n\n\n\n\n\n\n\t\t\t\t\t\t\t$mensaje\n\n\n\n\n\n\n\n\n\n"
    sleep 3
}

# Actualizar y sincronizar repositorios
sudo pacman -Sy --noconfirm

# Instalar paquetes espec铆ficos para MacBook
paquetes_macbook=(
    "broadcom-wl-dkms"
    "xf86-input-synaptics"
    "mbpfan"
    "pommed"
    "bluez"
    "bluez-utils"
)

sudo pacman -S "${paquetes_macbook[@]}" --noconfirm --needed

# Configuraci贸n de mbpfan
sudo systemctl enable --now mbpfan

# Configuraci贸n de pommed
sudo systemctl enable --now pommed

# Configuraci贸n del servicio de Bluetooth
sudo systemctl enable --now bluetooth.service

# Mensaje final
imprimir_mensaje "ワ Suscr铆bete!\n\n\t\t\t\t\t\t\t https://www.youtube.com/mxhectorvega"

