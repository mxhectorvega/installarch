    "org.supertuxproject.SuperTux"
    "org.telegram.desktop"
)

paquetes_kde=(
    "fr.handbrake.ghb"
    "net.davidotek.pupgui2"
    "net.minetest.Minetest"
    "net.supertuxkart.SuperTuxKart"
    "com.github.KRTirtho.Spotube"
