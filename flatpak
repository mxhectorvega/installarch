#!/usr/bin/env bash

# Descripcion: Instalacion de paquetes flatpak.
# Fecha de actualizacion: 26/11/2023
# Nota: Requiere del paquete flatpak para poderse instalar.

# Actualziacion
sudo pacman -Syyu --noconfirm

sudo pacmab -S flatpak --noconfirm --needed

# Software personal en flatpak
flatpak install -y \
com.github.KRTirtho.Spotube \
com.github.gabutakut.gabutdm \
com.github.iwalton3.jellyfin-media-player \
com.github.marktext.marktext \
com.github.tchx84.Flatseal \
com.google.EarthPro \ 
com.microsoft.Edge \
com.obsproject.Studio \
com.valvesoftware.Steam \
com.vscodium.codium \
fr.handbrake.ghb \
io.github.peazip.PeaZip \
io.itch.itch \
io.missioncenter.MissionCenter \
io.mrarm.mcpelauncher \
net.brinkervii.grapejuice \
net.davidotek.pupgui2 \
net.minetest.Minetest \
org.audacityteam.Audacity \
org.fedoraproject.MediaWriter \
org.gimp.GIMP \
org.jdownloader.JDownloader \
org.kde.kdenlive \
org.libreoffice.LibreOffice \
org.mozilla.Thunderbird \
org.pipewire.Helvum \
org.ryujinx.Ryujinx \
org.signal.Signal \
org.soundconverter.SoundConverter \
org.supertuxproject.SuperTux \
org.telegram.desktop

# para sacar la lista de apps:
# flatpak list --app --columns=application

# Mensaje final
printf '\n\n\tContribuye:\n\tmxhectorvega.com\n\n\n'
