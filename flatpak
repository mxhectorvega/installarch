# Paquete adicional
paquete_adicional="https://sober.vinegarhq.org/sober.flatpakref"

# Bucle para preguntar al usuario hasta que seleccione una opci贸n v谩lida
while true; do
    echo "驴Qu茅 lista de paquetes flatpak deseas instalar?"
    echo "1) Para entorno de escritorio GNOME (instalado con script minimal por mxhectorvega)"
    echo "2) Para entorno de escritorio KDE Plasma (instalado con archinstall desde archiso)"
    read -rp "Selecciona una opci贸n (1 o 2): " opcion

    # Validar la opci贸n seleccionada y proceder con la instalaci贸n
    if [ "$opcion" -eq 1 ]; then
        echo "Instalando paquetes de la Lista GNOME..."
        for paquete in "${paquetes_gnome[@]}"; do
            flatpak install --user -y "$paquete"
        done
        flatpak install --user -y "$paquete_adicional"
        break
    elif [ "$opcion" -eq 2 ]; then
        echo "Instalando paquetes de la Lista KDE..."
        for paquete in "${paquetes_kde[@]}"; do
            flatpak install --user -y "$paquete"
        done
        flatpak install --user -y "$paquete_adicional"
        echo "Instalando paquetes adicionales para permisos flatpak, capturador de pantalla y gestor de particiones GUI..."
        sudo pacman -Sy flatpak-kcm spectacle partitionmanager --noconfirm --needed
        break
    else
        echo "Opci贸n no v谩lida. Por favor, selecciona una opci贸n v谩lida."
    fi
done

# Mensaje final
imprimir_mensaje "ワ Suscr铆bete!\n\n\t\t\t\t\t\t\t https://www.youtube.com/mxhectorvega"

