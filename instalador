#!/usr/bin/env bash

# Script principal TUI para seleccionar y ejecutar scripts del repositorio installarch.
# Repositorio: https://github.com/mxhectorvega/installarch
# Ejecuci贸n: bash <(curl -L is.gd/mxinstallarch)
# Fecha de actualizaci贸n: 04/02/2025
# Versi贸n: 1.0

# Funci贸n para mostrar la bienvenida con estilo Apple
mostrar_bienvenida() {
    whiptail --title "Bienvenido a InstallArch" --msgbox "\n\n       Bienvenido a InstallArch\n\n      Tu gestor para la instalaci贸n y configuraci贸n de Arch Linux\n\n       https://www.github.com/mxhectorvega/installarch\n\n" 15 60
}

# Funci贸n para listar y seleccionar scripts del repositorio
listar_scripts() {
    scripts=$(curl -s https://api.github.com/repos/mxhectorvega/installarch/contents | grep 'name' | cut -d '"' -f 4 | grep '.sh$')
    lista=()
    for script in $scripts; do
        lista+=("$script" "$script")
    done

    seleccion=$(whiptail --title "Seleccione un script para ejecutar" --menu "Elige el script a ejecutar:" 20 60 15 "${lista[@]}" 3>&1 1>&2 2>&3)
}

# Funci贸n para ejecutar el script seleccionado con barra de progreso y caja de di谩logo
ejecutar_script() {
    script_url="https://raw.githubusercontent.com/mxhectorvega/installarch/main/$seleccion"
    whiptail --title "Instalaci贸n de $seleccion" --infobox "Descargando y ejecutando $seleccion..." 10 70

    # Crear una nueva sesi贸n de tmux
    tmux new-session -d -s installarch

    # Dividir la ventana en dos paneles
    tmux split-window -v -p 25

    # Ejecutar el script seleccionado en el panel superior
    tmux send-keys -t installarch.0 "wget -q -O - \"$script_url\" | bash 2>&1 | tee /tmp/install.log" C-m

    # Mostrar el contenido del archivo de registro en el panel inferior
    tmux send-keys -t installarch.1 "tail -f /tmp/install.log" C-m

    # Adjuntar la sesi贸n de tmux
    tmux attach -t installarch
}

# Verificar si whiptail y wget est谩n instalados, si no, instalarlos
if ! command -v whiptail &> /dev/null; then
    echo "whiptail no est谩 instalado. Instal谩ndolo..."
    sudo pacman -S whiptail --noconfirm --needed
fi

if ! command -v wget &> /dev/null; then
    echo "wget no est谩 instalado. Instal谩ndolo..."
    sudo pacman -S wget --noconfirm --needed
fi

# Verificar si tmux est谩 instalado, si no, instalarlo
if ! command -v tmux &> /dev/null; then
    echo "tmux no est谩 instalado. Instal谩ndolo..."
    sudo pacman -S tmux --noconfirm --needed
fi

# Mostrar bienvenida
mostrar_bienvenida

# Listar scripts y seleccionar uno
listar_scripts

# Ejecutar el script seleccionado con barra de progreso y caja de di谩logo
ejecutar_script

# Mensaje final
whiptail --title "Finalizado" --msgbox "\n\n      わ Gracias por usar InstallArch\n\n       https://www.github.com/mxhectorvega/installarch\n\n" 15 60

# Limpiar archivos temporales
rm /tmp/menuopt
