#!/bin/sh

# Variables
LOG_FILE="/tmp/installer.log"
REPO_URL="https://github.com/mxhectorvega/installarch"
REPO_DIR="/tmp/installarch"
SELECTED_SCRIPT=""

# Funci贸n para limpiar residuos
cleanup() {
    rm -rf "$REPO_DIR"
    echo "Limpieza completada." >> "$LOG_FILE"
}

# Funci贸n para manejar errores
handle_error() {
    echo "Error: $1" >> "$LOG_FILE"
    whiptail --title "Error" --msgbox "Ocurri贸 un error: $1\nConsulta el archivo de registros en $LOG_FILE para m谩s detalles." 10 60
    cleanup
    exit 1
}

# Funci贸n para satisfacer dependencias
install_dependencies() {
    if ! command -v whiptail >/dev/null 2>&1; then
        echo "Instalando whiptail..." >> "$LOG_FILE"
        sudo pacman -S --noconfirm libnewt >> "$LOG_FILE" 2>&1 || handle_error "No se pudo instalar whiptail."
    fi
}

# Funci贸n para mostrar la pantalla de bienvenida
welcome_screen() {
    whiptail --title "Bienvenido" --yesno "Bienvenido al instalador de scripts de mxhectorvega.\n\nEl archivo de registros se almacenar谩 en: $LOG_FILE\n\n驴Desea continuar?" 12 60
    if [ $? -eq 0 ]; then
        install_dependencies
        list_scripts_screen
    else
        cleanup
        exit 0
    fi
}

# Funci贸n para clonar el repositorio y listar los scripts en una sola columna
list_scripts_screen() {
    echo "Clonando repositorio..." >> "$LOG_FILE"
    git clone "$REPO_URL" "$REPO_DIR" >> "$LOG_FILE" 2>&1 || handle_error "No se pudo clonar el repositorio."

    # Obtener la lista de scripts ejecutables sin extensi贸n
    SCRIPTS=$(find "$REPO_DIR" -type f -executable ! -name "*.*" | awk -F/ '{print $NF}')

    # Formatear la lista para whiptail (una columna vertical)
    SCRIPT_LIST=""
    for script in $SCRIPTS; do
        SCRIPT_LIST="$SCRIPT_LIST $script \"\""
    done

    # Mostrar la lista en una sola columna
    SELECTED_SCRIPT=$(whiptail --title "Lista de Scripts" --menu "Seleccione un script para ejecutar:" 20 60 10 $SCRIPT_LIST 3>&1 1>&2 2>&3)

    if [ $? -eq 0 ]; then
        installation_screen
    else
        cleanup
        exit 0
    fi
}

# Funci贸n para mostrar la pantalla de instalaci贸n
installation_screen() {
    whiptail --title "Instalaci贸n" --msgbox "El script seleccionado es: $SELECTED_SCRIPT\n\nPresione OK para continuar." 10 60

    # Simulaci贸n de barra de progreso
    {
        for i in {1..10}; do
            echo $((i * 10))
            sleep 1
        done
    } | whiptail --gauge "Instalando $SELECTED_SCRIPT..." 6 60 0

    # Solicitar contrase帽a si es necesario
    if grep -q "sudo" "$REPO_DIR/$SELECTED_SCRIPT"; then
        PASSWORD=$(whiptail --title "Contrase帽a Root" --passwordbox "Ingrese la contrase帽a de root:" 10 60 3>&1 1>&2 2>&3)
        echo "$PASSWORD" | sudo -S "$REPO_DIR/$SELECTED_SCRIPT" >> "$LOG_FILE" 2>&1 || handle_error "Error al ejecutar el script."
    else
        "$REPO_DIR/$SELECTED_SCRIPT" >> "$LOG_FILE" 2>&1 || handle_error "Error al ejecutar el script."
    fi

    final_screen
}

# Funci贸n para mostrar la pantalla final
final_screen() {
    whiptail --title "Finalizado" --yesno "ワ Suscr铆bete!  https://www.youtube.com/mxhectorvega\n\n驴Desea ver el archivo de registros?" 12 60
    if [ $? -eq 0 ]; then
        whiptail --title "Archivo de Registros" --textbox "$LOG_FILE" 20 60
    fi
    cleanup
    exit 0
}

# Iniciar el instalador
welcome_screen
