#!/usr/bin/env bash

# Configuraci贸n inicial
set -e

# Variables globales
LOG_DIR="$HOME/installarch_logs"
LOG_FILE="$LOG_DIR/installation.log"
REPO_DIR="$HOME/installarch"

# Crear directorio de logs si no existe
mkdir -p "$LOG_DIR"

# Funci贸n para mostrar mensajes de error
mostrar_error() {
    whiptail --title "Error" --msgbox "$1" 8 78
}

# Funci贸n para pedir contrase帽a de root
pedir_contrase帽a() {
    PASSWORD=$(whiptail --passwordbox "Ingresa la contrase帽a de root:" 8 78 --title "Permisos de administrador" 3>&1 1>&2 2>&3)
    echo "$PASSWORD" | sudo -S echo "" > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        mostrar_error "Contrase帽a incorrecta. Por favor, int茅ntalo de nuevo."
        pedir_contrase帽a
    fi
}

# Funci贸n para actualizar repositorio
actualizar_repositorio() {
    if [ -d "$REPO_DIR" ]; then
        cd "$REPO_DIR"
        git pull
    else
        git clone https://github.com/mxhectorvega/installarch "$REPO_DIR"
    fi
}

# Funci贸n para obtener lista de scripts
obtener_lista_scripts() {
    find "$REPO_DIR" -type f -exec awk '/^#!\/usr\/bin\/env bash/ { print FILENAME }' {} \; | xargs -n1 basename
}

# Pantalla de bienvenida
pantalla_bienvenida() {
    whiptail --title "Bienvenido" --msgbox "隆Hola! Este script guardar谩 el log en: $LOG_FILE" 10 60
}

# Pantalla de selecci贸n de script
seleccionar_script() {
    SCRIPTS=$(obtener_lista_scripts)
    OPTIONS=()
    for script in $SCRIPTS; do
        OPTIONS+=("$script" "")
    done
    SCRIPT_SELECCIONADO=$(whiptail --title "Selecciona un script" --menu "Elige el script a ejecutar:" 20 78 10 "${OPTIONS[@]}" 3>&1 1>&2 2>&3)
    if [ -z "$SCRIPT_SELECCIONADO" ]; then
        mostrar_error "No seleccionaste ning煤n script."
        seleccionar_script
    fi
}

# Funci贸n para ejecutar script seleccionado con salida verbosa
ejecutar_script() {
    OUTPUT_FILE=$(mktemp)
    EXIT_FILE=$(mktemp)

    # Ejecutar el script y capturar salida
    (
        script -qefc "bash '$REPO_DIR/$SCRIPT_SELECCIONADO' 2>&1; echo \$? > '$EXIT_FILE'" "$OUTPUT_FILE"
    ) &
    INSTALL_PID=$!

    # Mostrar salida en tiempo real
    whiptail --title "Progreso de la Instalaci贸n" --textbox "$OUTPUT_FILE" 20 80

    # Esperar a que termine la instalaci贸n
    wait $INSTALL_PID
    INSTALL_EXIT=$(cat "$EXIT_FILE")

    # A帽adir salida al log principal
    cat "$OUTPUT_FILE" >> "$LOG_FILE"

    # Limpiar archivos temporales
    rm -f "$OUTPUT_FILE" "$EXIT_FILE"

    return $INSTALL_EXIT
}

# Pantalla final
pantalla_final() {
    whiptail --title "Instalaci贸n Completa" --msgbox "ワ Suscr铆bete!  https://www.youtube.com/mxhectorvega" 10 60
}

# Programa principal
main() {
    pantalla_bienvenida
    actualizar_repositorio
    seleccionar_script
    pedir_contrase帽a
    ejecutar_script || {
        mostrar_error "La instalaci贸n ha fallado. Revisa el log en: $LOG_FILE"
        exit 1
    }
    pantalla_final
}

main
