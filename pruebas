# Funci贸n para mostrar mensajes con formato
imprimir_mensaje() {
    local mensaje="$1"
    echo -e "\n\n\n\n\n\n\n\n\t\t\t\t\t\t\t$mensaje\n\n\n\n\n\n\n\n\n\n"
    sleep 3
}

# Desinstalar software no usado Gnome
sudo pacman -R totem \
epiphany \
gnome-system-monitor \
gnome-backgrounds \
gnome-contacts \
gnome-music \
gnome-maps \
gnome-tour \
gnome-clocks \
gnome-calendar \
gnome-weather \
gnome-software


# Limpoeza del gestor de paquetes pacman
sudo pacman -Rns $(pacman -Qdtq)
du -sh /var/cache/pacman/pkg/
du -sh ~/.cache/paru
sudo pacman -Scc --noconfirm
paru -Scc --noconfirm

# Mensaje final
imprimir_mensaje "ワ Suscr铆bete!\n\n\t\t\t\t\t\t\t https://www.youtube.com/mxhectorvega"
