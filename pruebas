#!/bin/sh

# Variables
LOG_FILE="/var/log/install_mxhectorvega.log"
REPO_URL="https://github.com/mxhectorvega/installarch"
DEPENDENCIES="whiptail git"
SCRIPTS_DIR="/tmp/installarch"
USER=$(logname)

# Funciones de ayuda
log() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" | tee -a "$LOG_FILE"
}

check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "Este script debe ejecutarse como root" >&2
        exit 1
    fi
}

install_dependencies() {
    for dep in $DEPENDENCIES; do
        if ! command -v "$dep" >/dev/null 2>&1; then
            pacman -S --noconfirm "$dep"
        fi
    done
}

validate_compatibility() {
    for url in "$@"; do
        if ! curl -sSf "$url" >/dev/null; then
            log "Error: No se pudo validar la compatibilidad con $url"
            exit 1
        fi
    done
}

save_root_password() {
    ROOT_PASS=$(whiptail --passwordbox "Introduce la contrase帽a de root:" 8 60 3>&1 1>&2 2>&3)
    export ROOT_PASS
}

clone_repository() {
    su - "$USER" -c "git clone $REPO_URL $SCRIPTS_DIR"
}

list_scripts() {
    find "$SCRIPTS_DIR" -type f -executable -exec basename {} \; | grep -v '\.' | awk '{print NR, $0}'
}

install_script() {
    local script_name=$1
    su - "$USER" -c "bash $SCRIPTS_DIR/$script_name"
}

rollback() {
    log "Iniciando rollback de la instalaci贸n fallida..."
    # Implementar el rollback seg煤n sea necesario
}

cleanup() {
    rm -rf "$SCRIPTS_DIR"
    log "Limpieza completada"
}

# Bienvenida
whiptail --title "Instalador de scripts de mxhectorvega" --msgbox "Bienvenido al instalador de scripts de mxhectorvega.\nLos registros se almacenar谩n en $LOG_FILE" 12 80

# Satisfacer dependencias
install_dependencies

# Pantalla de lista de scripts
clone_repository
SCRIPT_LIST=$(list_scripts)
SELECTED_SCRIPT=$(whiptail --title "Lista de scripts" --menu "Selecciona un script para ejecutar:" 20 80 10 $SCRIPT_LIST 3>&1 1>&2 2>&3)

if [ -z "$SELECTED_SCRIPT" ]; then
    whiptail --title "Instalaci贸n cancelada" --msgbox "Instalaci贸n cancelada" 8 40
    cleanup
    exit 0
fi

# Pantalla de instalaci贸n
{
    save_root_password
    echo "10"
    echo "# Preparando la instalaci贸n..."
    sleep 1
    if install_script "$SELECTED_SCRIPT"; then
        echo "100"
        echo "# Instalaci贸n completada"
    else
        rollback
        whiptail --title "Error de instalaci贸n" --msgbox "Hubo un error durante la instalaci贸n. Revisa el archivo de registro para m谩s detalles." 8 40
        cleanup
        exit 1
    fi
} | whiptail --gauge "Instalando $SELECTED_SCRIPT..." 6 60 0

# Pantalla final
whiptail --title "Instalaci贸n completada" --msgbox "ワ Suscr铆bete!  https://www.youtube.com/mxhectorvega" 8 80
whiptail --title "Registro de instalaci贸n" --textbox "$LOG_FILE" 20 80

# Limpieza
cleanup

exit 0
