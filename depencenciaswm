#!/bin/sh

#Instalar las dependencias al toque para flojos.
git clone https://github.com/mxhectorvega/st ~/st/ ; sudo make install ; mkdir ~/.local/ ; mkdir ~/.local/share/ ; mkdir ~/.local/share/applications/ ; touch ~/.local/share/applications/st.desktop ; echo "[Desktop Entry]" >> ~/.local/share/applications/st.desktop ; echo "Type=Application" >> ~/.local/share/applications/st.desktop ; echo "Icon=Terminal" >> ~/.local/share/applications/st.desktop ; echo "Name=STerminal" >> ~/.local/share/applications/st.desktop ; echo "Exec=st -e" >> ~/.local/share/applications/st.desktop ; cd ; sudo pacman -S python3 python-pip materia-gtk-theme materia-kde papirus-icon-theme bc tmux imagemagick ueberzug ffmpegthumbnailer feh mpd mpc ncmpcpp slock telegram-desktop htop xarchiver neofetch leafpad ranger pcmanfm lxappearance dunst maim xclip sxiv xdotool calcurse zathura zathura-pdf-mupdf neovim mpv screenkey --noconfirm --needed ; yay -S google-chrome-dev picom-ibhagwan-git --noconfirm --needed ; pip install pywal --noconfirm
clear
